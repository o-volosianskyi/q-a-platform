<div class="modal-header">
  <h5 class="modal-title">Create question</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body container justify-content-around">
  <div class="input-group w-50" style="margin-bottom: 10px">
    <input type="text" class="form-control" aria-label="Text input with dropdown button" placeholder="Title" id="question-title">
    <div class="input-group-append">
      <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown"
        aria-haspopup="true" aria-expanded="false" id="question-category" value="0">Category</button>
      <div class="dropdown-menu">
        <% @categories.each do |category| %>
          <span class="dropdown-item question-category__option" value=<%= category['id'] %>><%= category['name']%></span>
        <% end %>
      </div>
    </div>
  </div>
  <div id="document-full" style="min-height: 200px">
  </div>
  <div class="progress d-none" id="create-question__progress">
    <div id="create-question__progress-bar" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 0%"></div>
  </div>
  <div class="alert alert-danger d-none" role="alert" id="create-question__error">
    Oops! Couldn't create your question.
  </div>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-primary" id='create-question__button'>Save question</button>
</div>